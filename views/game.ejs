            </div>
        </div>
        <div class="chat" style="display:none;">
            <div class="textarea">

            </div>
            <div class="input">
                <input type="text" maxlength="64" placeholder="GG, WP">
            </div>
        </div>
        <div class="player-wrapper">
            <div class="player-block">
                <div class="id active">
                    1
                </div>
                <div class="info">
                    <div class="left">
                        <div class="img"></div>
                    </div>
                    <div class="right">
                        <div class="nickname">nickname</div>
                        <div class="mmr">1000pts</div>
                    </div>
                </div>
            </div>
            <div class="player-block">
                <div class="id">
                    2
                </div>
                <div class="info">
                    <div class="left">
                        <div class="img"></div>
                    </div>
                    <div class="right">
                        <div class="nickname">nickname</div>
                        <div class="mmr">1000pts</div>
                    </div>
                </div>
            </div>
            <div class="player-block">
                <div class="id">
                    3
                </div>
                <div class="info">
                    <div class="left">
                        <div class="img"></div>
                    </div>
                    <div class="right">
                        <div class="nickname">nickname</div>
                        <div class="mmr">1000pts</div>
                    </div>
                </div>
            </div>
            <div class="player-block">
                <div class="id">
                    4
                </div>
                <div class="info">
                    <div class="left">
                        <div class="img"></div>
                    </div>
                    <div class="right">
                        <div class="nickname">nickname</div>
                        <div class="mmr">1000pts</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/dist/bmatch-public-<%= process.env.npm_package_version %>.js"></script>
